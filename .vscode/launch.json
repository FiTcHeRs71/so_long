{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug so_long",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/so_long",
            "args": ["map/map11.ber"],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}